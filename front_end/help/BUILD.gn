import("../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../scripts/build/ninja/devtools_module.gni")

devtools_module("help") {
  sources = [
    "HelpImpl.js",
    "ReleaseNoteText.js",
    "ReleaseNoteView.js",
  ]

  deps = [
    "../common:bundle",
    "../host:bundle",
    "../ui:bundle",
  ]
}

copy_to_gen("legacy_css") {
  sources = [ "releaseNote.css" ]
}

devtools_entrypoint("bundle") {
  entrypoint = "help.js"

  deps = [ ":help" ]
}
