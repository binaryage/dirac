import("../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../scripts/build/ninja/devtools_module.gni")

devtools_module("formatter") {
  sources = [
    "FormatterWorkerPool.js",
    "ScriptFormatter.js",
    "SourceFormatter.js",
  ]

  deps = [
    "../bindings:bundle",
    "../common:bundle",
    "../platform:bundle",
    "../sdk:bundle",
    "../text_utils:bundle",
    "../workspace:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "formatter.js"

  deps = [ ":formatter" ]
}
