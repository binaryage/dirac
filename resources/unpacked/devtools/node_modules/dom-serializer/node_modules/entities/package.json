  },
  "scripts": {
    "build": "tsc",
    "coverage": "cat coverage/lcov.info | coveralls",
    "format": "prettier --write **/*.{ts,md}",
    "lint": "eslint --ext=js,ts src",
    "prepare": "npm run build",
    "test": "jest --coverage && npm run lint"
  },
  "types": "lib/index.d.ts",
  "version": "2.0.2"
