import("../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../scripts/build/ninja/devtools_module.gni")

devtools_module("host") {
  sources = [
    "InspectorFrontendHost.js",
    "InspectorFrontendHostAPI.js",
    "Platform.js",
    "ResourceLoader.js",
    "UserMetrics.js",
  ]

  deps = [
    "../common:bundle",
    "../platform:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "host.js"

  deps = [ ":host" ]
}
