{
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "bugs": "https://github.com/vfile/vfile-location/issues",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Christian Murphy <christian.murphy.42@gmail.com>"
  ],
  "dependencies": {},
  "description": "vfile utility to convert between positional (line and column-based) and offset (range-based) locations",
  "devDependencies": {
    "@types/unist": "^2.0.0",
    "browserify": "^16.0.0",
    "dtslint": "^3.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "vfile": "^4.0.0",
    "xo": "^0.27.0"
  },
  "files": [
    "index.js",
    "types/index.d.ts"
  ],
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "keywords": [
    "vfile",
    "vfile-util",
    "util",
    "utility",
    "virtual",
    "file",
    "location",
    "position",
    "offset"
  ],
  "license": "MIT",
  "name": "vfile-location",
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "lines": 100
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "repository": "vfile/vfile-location",
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify . -s vfileLocation > vfile-location.js",
    "build-mangle": "browserify . -s vfileLocation -p tinyify > vfile-location.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.{js,ts}\" && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage && npm run test-types",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test-types": "dtslint types"
  },
  "types": "types/index.d.ts",
  "version": "3.0.1",
  "xo": {
    "esnext": false,
    "ignores": [
      "vfile-location.js"
    ],
    "prettier": true
  }
}
